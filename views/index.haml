!!!
%html{:lang => "en"}
	%head
		%meta{:charset => "utf-8"}/
		%title Rock, Paper, Scissors
		%link{:href => "public/css/bootstrap.css", :rel => "stylesheet"}/
		:css
			body {
				padding-top: 60px;
				background-color: #B4FBFA;
			}

			.textores {
					margin-top: 170px;	
					font-style:italic;
					font-size: 200%;
					color: red;
				}
		%link{:href => "public/css/bootstrap-responsive.css", :rel => "stylesheet"}/
	%body
		.navbar.navbar-fixed-top.navbar-inverse
			.navbar-inner
				.container
					%button.btn.btn-navbar{"data-toggle"=>"collapse","data-target"=>".nav-collapse",:type=>"button"}
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.brand{:href => "#"} Rock, Paper, Scissors
					.nav-collapse.collapse
						%ul.nav
							%li.active
								%a{:href => "#"} Home
							%li
								%a{:href => "#help"} Help
							%li
								%a{:href => "#about"} About
					/ /.nav-collapse
		.container
			%center
				%h1 Rock, Paper, Scissors
				%h2 Choose a throw:
				.col-sm-4.md-4
					%a(href="/?choice=rock" class="thumbail") 
						%img(src="/public/img/rock.jpg" alt="Rock" height="140" width="180px" style="display: block")
				.col-sm-4.md-4
					%a(href="/?choice=paper" class="thumbail")
						%img(src="/public/img/paper.jpg" alt="Paper" height="140" width="180px" style="display: block")
				.col-sm-4.md-4
					%a(href="/?choice=scissors" class="thumbail")
						%img(src="/public/img/scissors.jpg" alt="Scissors" height="140" width="180px" style="display: block")
				.textores		
					%center
						%p=answer
		%script{:src => "public/js/bootstrap.js"}
